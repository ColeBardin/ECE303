#include <Arduino.h>
#include "AnalogPin.h"

AnalogPin a(A_0);
int count;
float volt;

void setup()
{
    Serial.begin(9600);
    a.set_ref(0x1);
    a.set_prescaler(0x0);
    a.select_ADC();
    a.set_ADC(true);
}

void loop()
{
    count = a.read(); 
    volt = (float)count * 5.0 / 1023.0;
    Serial.print("Read: ");
    Serial.print(count);
    Serial.print(" (");
    Serial.print(volt);
    Serial.println("V)");
    delay(1000);
}

